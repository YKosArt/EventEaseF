@page
@model LogoutModel
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies

@{
    Layout = null;

    try
    {
        await HttpContext.SignOutAsync(CookieAuthenticationDefaults.AuthenticationScheme);
    }
    catch (Exception ex)
    {
        Console.WriteLine($"Logout error: {ex.Message}");
    }

    Response.Headers["Refresh"] = "2;url=/login";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <title>Вихід з системи</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5 text-center">
        <div class="alert alert-success">
            <h4 class="alert-heading">Ви вийшли з системи</h4>
            <p>Зараз ви будете перенаправлені на сторінку входу...</p>
            <hr />
            <a href="/" class="btn btn-primary">Перейти вручну</a>
        </div>
    </div>
</body>
</html>

